@page
@model MiniIsTakip.Web.Pages.PersonCreateModel
@{
    ViewData["Title"] = "Çalışan Ekle";
}

<h1>Çalışan Ekle</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Person.FullName"></label>
        <input asp-for="Person.FullName" class="form-control" />
        <span asp-validation-for="Person.FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Person.Email"></label>
        <input asp-for="Person.Email" class="form-control" />
        <span asp-validation-for="Person.Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
    <a asp-page="/AnaSayfa" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
