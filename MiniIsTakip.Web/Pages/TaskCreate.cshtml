@page
@model MiniIsTakip.Web.Pages.TaskCreateModel
@{
    ViewData["Title"] = "Yeni İş Atama";
}

<h1>Yeni İş Atama</h1>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="TaskItem.Description"></label>
        <input asp-for="TaskItem.Description" class="form-control" />
        <span asp-validation-for="TaskItem.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TaskItem.AssignedPersonId">Çalışan Seç</label>
        <select asp-for="TaskItem.AssignedPersonId" class="form-control" asp-items="@(new SelectList(Model.Employees, "Id", "FullName"))">
            <option value="">-- Çalışan Seçin --</option>
        </select>
        <span asp-validation-for="TaskItem.AssignedPersonId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">İş Ata</button>
</form>

<div asp-validation-summary="All" class="text-danger"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
